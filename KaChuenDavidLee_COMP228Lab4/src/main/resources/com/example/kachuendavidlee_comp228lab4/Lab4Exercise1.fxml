<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="com.example.kachuendavidlee_comp228lab4.Exercise1Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Column 1 -->
    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Label text="Province:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Label text="City:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Label text="Postal Code:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>

    <!-- Column 2 -->
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <TextField fx:id="provinceField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <TextField fx:id="cityField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <TextField fx:id="postalCodeField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <!-- Column 3 -->
    <VBox spacing="20" GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.rowSpan="2">
        <CheckBox fx:id="studentCouncil" text="Student Council"/>
    </VBox>
    <VBox spacing="20" GridPane.columnIndex="2" GridPane.rowIndex="4" GridPane.rowSpan="2">
        <CheckBox fx:id="volunteerWork" text="Volunteer Work"/>
    </VBox>

    <!-- Column 4 -->
    <VBox spacing="10" GridPane.columnIndex="3" GridPane.rowIndex="0" GridPane.rowSpan="6">
        <HBox spacing="10">
            <fx:define>
                <ToggleGroup fx:id="majorGroup"/>
            </fx:define>
            <RadioButton fx:id="csRadio" text="Computer Science" toggleGroup="$majorGroup"/>
            <RadioButton fx:id="businessRadio" text="Business" toggleGroup="$majorGroup"/>
        </HBox>

        <ComboBox fx:id="courseComboBox" prefWidth="150"/>
        <ListView fx:id="courseListView" prefHeight="100"/>
    </VBox>

    <!-- Bottom Section for Display and newly Reset button-->
    <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="7"
          GridPane.columnSpan="4">
        <HBox spacing="10" alignment="CENTER">  <!--alignment to centre-->
            <Button fx:id="displayButton" text="Display" onAction="#handleDisplay"/>
            <Button fx:id="resetButton" text="Reset" onAction="#handleReset"/>
            <padding>
                <Insets top="10" bottom="10"/>
            </padding>
        </HBox>
        <TextArea fx:id="displayArea" editable="false" prefRowCount="3"/>
    </VBox>


</GridPane>